{
    "name": "modern-blog",
    "version": "1.0.0",
    "description": "ModernBlog - Laravel + Vue.js blogging platform",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build && npm run build:optimize",
        "build:optimize": "echo 'Frontend assets built and optimized for production'",
        "build:production": "NODE_ENV=production vite build --mode=production",
        "build:analyze": "vite build --mode=analyze",
        "preview": "vite preview",
        "serve": "vite preview",
        "lint": "eslint --ext .js,.vue resources/js/",
        "lint:fix": "eslint --ext .js,.vue resources/js/ --fix",
        "format": "prettier --write resources/js/**/*.{js,vue}",
        "format:check": "prettier --check resources/js/**/*.{js,vue}",
        "test": "echo 'Frontend tests not configured yet'",
        "clean": "rm -rf public/build node_modules/.vite"
    },
    "keywords": [
        "laravel",
        "vue",
        "blog",
        "cms"
    ],
    "author": "ModernBlog Team",
    "license": "MIT",
    "devDependencies": {
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16",
        "@vitejs/plugin-vue": "^4.5.0",
        "@vue/eslint-config-prettier": "^8.0.0",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.53.0",
        "eslint-plugin-vue": "^9.18.1",
        "laravel-vite-plugin": "^0.8.1",
        "postcss": "^8.4.31",
        "prettier": "^3.0.3",
        "tailwindcss": "^3.3.5",
        "vite": "^4.5.0"
    },
    "dependencies": {
        "@headlessui/vue": "^1.7.16",
        "@heroicons/vue": "^2.0.18",
        "@vueuse/core": "^13.9.0",
        "axios": "^1.6.0",
        "dompurify": "^3.0.6",
        "highlight.js": "^11.9.0",
        "marked": "^11.0.0",
        "pinia": "^2.1.7",
        "vue": "^3.3.8",
        "vue-router": "^4.2.5"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}
